@model List<Teacher>
@{
    ViewData["Title"] = "Index";
    // Layout = "_MyLayout";
}
<a asp-controller="Teacher" asp-action="New" class="btn btn-success">New Teacher </a>

<h1>Index</h1>
<table class="table">
    <thead class="table-dark">
       <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th scope="col">Image</th>
          <th scope="col">Salary</th>
          <th scope="col">Position</th>
          <th scope="col">Edit</th>
          <th scope="col">Details</th>
          <th scope="col">Delete</th>
       </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td><img src="/images/@item.Image"  height=100 width=100/></td>
            <td>@item.Salary</td>
            <td>@item.Position</td>
            <td><a href="/Teacher/Edit/@item.Id" class="btn btn-success">Edit</a></td>
            <td><a href="/Teacher/Details/@item.Id" class="btn btn-success">Details</a></td>
            <td><a href="/Teacher/Delete/@item.Id" class="btn btn-success">Delete</a></td>
        </tr>
        </tbody>
    }
</table>
