@model Teacher


<div class="card" style="width:400px">
  <img class="card-img-top" src="/Images/@Model.Image" alt="Card image">
  <div class="card-body">

    <h2 class="card-title"> Name: @Model.Name</h2>
     
    <h4 class="card-text"> ID: @Model.Id</h4>
     
    <h4 class="card-text">Salary: @Model.Salary</h4>

    <h4 class="card-text"> Address: @Model.Address</h4>
  
    <h4 class="card-text">Position: @Model.Position</h4>

    <a href="/Teacher/Delete/@Model.Id" class="btn btn-success">Delete</a>


    <a href="/Teacher/Index" class="btn btn-primary">Back To List</a>
    
  </div>
</div>
