@model List<Subject>
@{
  //  Layout = "_MyLayout";
    ViewData["Title"] = "Index";
     Layout = "_ttLayout";
}
<h1>Subject Data</h1>

@*<a asp-controller="Subject" asp-action="New"  class="btn btn-primary">New Subject</a>

*@
<table class="table table-bordered">
     <tr>
        
        <th>Subject Name</th>
        <th>Degree</th>
        <th>MinDegree</th>
        <th>Level Name</th>
       

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
             <td>@item.Degree</td>
              <td>@item.MinDegree</td>
            <td>@item.level.Name</td>
           @* <td>@item.teacher.Name</td>*@
            <td><a href="/Subject/Edit/@item.Id"  class="btn btn-primary">Edit</a></td>
         @*   <td><a href="/Subject/Delete/@item.Id"  class="btn btn-danger">Delete</a></td>*@
             <td><a href="/Subject/Details/@item.Id"  class="btn btn-primary">Details</a></td>
        </tr>
    }
</table>
